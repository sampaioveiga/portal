<%= form_for([@patient, @device]) do |f| %>

	<%= render 'shared/error_messages', obj: @patient %>

	<div class="form-group">
		<%= f.text_field :user_id, value: current_user.id, class: 'form-control hidden' %>
	</div>

	<div class="form-group">
		<%= f.label :device_type_id, "Tipo de dispositivo" %>
		<%= f.collection_select(:device_type_id, @device_types, :id, :nome_dispositivo, {}, class: 'form-control') %>
	</div>

	<div class="form-group">
		<%= f.label :data_introducao %>
		<%= f.date_field :data_introducao, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :data_remocao %>
		<%= f.date_field :data_remocao, value: Date.today, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :observacao %>
		<%= f.text_area :observacao, class: 'form-control' %>
	</div>

	<div class="modal-footer">
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
		<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	</div>
<% end %>