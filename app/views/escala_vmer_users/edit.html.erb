<aside class="col-md-2">
	<%= render 'shared/escala_vmer_menu' %>
</aside>
<div class="col-md-10">
	<h3><%= @user.user.nome_utilizador %></h3>
	<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages', obj: @user %>

		<%= f.label :escala_vmer_group_id, "Grupo" %>
		<%= f.collection_select :escala_vmer_group_id, @groups, :id, :nome_grupo, {}, class: 'form-control' %>
		
		<%= f.label :nivel_acesso %>
		<%= f.select :nivel_acesso, [['0 - Sem acesso', 0], ['1 - Utilizador', 1], ['2 - Supervisor', 2]], {}, class: 'form-control' %>
		
		<%= f.label ' ' %>
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
		<%= link_to "Cancelar", escala_vmer_users_path(),
			class: 'btn btn-default' %><br />
		<%= link_to 'Eliminar', escala_vmer_user_path(@user),
			method: :delete,
			data: { confirm: 'Tem a certeza?' },
			class: 'btn btn-danger' %>

	<% end %>
</div>