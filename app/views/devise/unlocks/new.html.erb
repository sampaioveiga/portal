<div class="col-md-12">
	<%= render "devise/shared/links" %>
</div>

<div class="col-md-10 col-md-offset-1">
	<h1>Reenviar instruções de desbloqueio</h1>

	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
		<%= devise_error_messages! %>

		<div class="form-group">
			<%= f.label :email, class: 'control-label col-md-3' %>
			<div class="col-md-9">
				<%= f.email_field :email, autofocus: true, class: 'form-control' %>
			</div>
		</div>

		<div class="col-md-offset-3">
			<%= f.submit "Reenviar instruções", class: 'btn btn-primary' %>
		</div>
	<% end %>

</div>