<aside class="col-md-3">
	<%= render "devise/shared/links" %>
</aside>
<div class="col-md-9">
	<h2>Iniciar sessão</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="field">
			<%= f.label :numero_mecanografico, "Número mecanogrático" %>
			<%= f.text_field :numero_mecanografico, autofocus: true, class: 'form-control' %>
		</div>

		<div class="field">
			<%= f.label :password, 'Senha' %><br />
			<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
		</div>

		<% if devise_mapping.rememberable? -%>
			<div class="field btn-group" data-toggle="buttons">
				<label class="btn btn-default">
					<input type="checkbox" name="user[remember_me]" id="user[remember_me]" value="1" autocomplete="off">Lembrar
				</label>
			</div>
			<small>Não termina sessão por inatividade</small>
		<% end -%>
		
		<div class="actions">
			<%= f.submit "Submeter", class: 'btn btn-primary' %>
		</div>
	<% end %>