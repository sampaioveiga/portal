<div class="col-md-6 col-md-offset-6">
    <h2>Iniciar sessão</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :numero_mecanografico, "Número mecanogrático" %>
            <%= f.text_field :numero_mecanografico, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
            <%= f.label :password, 'Senha' %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field btn-group" data-toggle="buttons">
                <label class="btn btn-default btn-xs">
                    <input type="checkbox" name="user[remember_me]" id="user[remember_me]" value="1" autocomplete="off">Memorizar
                </label>
            </div>
        <% end -%>
        
        <div class="actions">
            <%= f.submit "Submeter", class: 'btn btn-primary' %>
        </div>
    <% end %>

<%= render "devise/shared/links" %>