<div class="col-md-12">
	<%= render 'shared/menu_patients' %>
</div>

<div class="col-md-10 col-md-offset-1">
	<div class="jumbotron">
		<%= search_form_for @q do |f| %>
			<div class="col-md-12">
				<div class="input-group">
					<%= f.search_field :nome_cont, placeholder: 'Pesquisar', class: 'form-control' %>
					<span class="input-group-btn">
						<%= f.submit "Procurar", class: 'btn btn-success' %>
					</span>
				</div>
			</div>
		<% end %>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Nome</th>
				<th>Data nascimento</th>
				<th>Idade</th>
			</tr>
		</thead>
		<tbody>
			<% @patients.each do |p| %>
				<tr>
					<td><%= link_to p.nome, patient_path(p) %></td>
					<td><%= p.data_nascimento %></td>
					<td><%= distance_of_time_in_words_to_now(p.data_nascimento) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>