<aside class="col-md-2">
	<%= render 'shared/ajudas_tecnicas_menu' %>
</aside>
<div class="col-md-10">
	<h1>Tipos de contacto</h1>
	<div class="col-md-8">
		<table class="table">
			<thead>
				<tr>
					<th>Tipo de contacto</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @contact_types.each do |ct| %>
					<tr>
						<td><%= ct.tipo_contacto %></td>
						<td><a href="<%= edit_ajudas_tecnicas_contact_type_path(ct) %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4 well">
		<h3>Nova tipo de contacto</h3>
		<%= render 'form' %>
	</div>
</div>