<h3>Novo utilizador</h3>
<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', obj: @user %>
	<div class="col-md-5">
		<%= f.label :user_id %>
		<%= f.collection_select :user_id, @users_collection, :id, :nome_utilizador, {}, class: 'form-control' %>
	</div>
	<div class="col-md-5">
		<%= f.label :nivel_acesso %>
		<% f.number_field :nivel_acesso, min: 0, max: 2, class: 'form-control' %>
		<%= f.select :nivel_acesso, [['0 - Sem acesso', 0], ['1 - Utilizador', 1], ['2 - Supervisor', 2]], {}, class: 'form-control' %>
	</div>
	<div class="col-md-2">
		<%= f.label ' ' %>
		<%= f.submit "Adicionar", class: 'btn btn-primary' %>
	</div>
<% end %>