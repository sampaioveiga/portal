<%= form_for(@transport) do |f| %>

	<%= render 'shared/error_messages', obj: @transport %>

	<!-- new line -->
	<div class="col-md-6">
		<%= f.label :user_id, "Requisitante" %>
		<% unless (current_user.administrator || current_user.transp_user.nivel_acesso == 2) %>
			<%= f.collection_select :user_id, 
				@users, 
				:id, 
				:nome_utilizador, 
				{}, 
				class: 'form-control',
				disabled: 'disabled' %>
		<% else %>
			<%= f.collection_select :user_id, 
				@users, 
				:id, 
				:nome_utilizador, 
				{}, 
				class: 'form-control' %>
		<% end %>
	</div>

	<div class="col-md-6">
		<%= f.label :ulsne_department_id, "Serviço" %>
		<%= f.collection_select :ulsne_department_id, 
				@departments, 
				:id, 
				:nome_servico, 
				{}, 
				class: 'form-control' %>
	</div>

	<!-- new line -->
	<div class="col-md-12">
		<%= f.label :assunto %>
		<%= f.text_field :assunto, class: 'form-control' %>
	</div>

	<!-- new line -->
	<div class="col-md-6">
		<%= f.label :local_saida_id, "Local de saída do transporte" %>
		<%= f.collection_select :local_saida_id, 
				@destinations, 
				:id, 
				:destino, 
				{}, 
				class: 'form-control' %>
	</div>
	
	<div class="col-md-6">
		<%= f.label :local_entrega_id, "Local de entrega do material" %>
		<%= f.collection_select :local_entrega_id, 
				@destinations, 
				:id, 
				:destino, 
				{}, 
				class: 'form-control' %>
	</div>

	<!-- new line -->
	<div class="col-md-10">
		<%= f.label :data_entrega, "Data e hora de entrega" %><br />
		<%= f.datetime_select :data_entrega,
			{},
			class: 'form-control datetime-select' %>
	</div>
	<div class="col-md-2">
		<p><%= f.label :urgente %></p>
		<div class="checkbox">
			<label><%= f.check_box :urgente %> Sim</label>
		</div>
	</div>

	<div class="col-md-12">
		<%= f.label :observacoes %>
		<%= f.text_area :observacoes, class: 'form-control' %>
	</div>

	<!-- new line -->
	<div class="col-md-3">
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
	</div>
	<div class="col-md-9">
		<%= link_to "Cancelar", transp_materials_path(), class: 'btn btn-default' %>
	</div>
<% end %>