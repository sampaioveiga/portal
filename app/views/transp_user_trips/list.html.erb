<aside class="col-md-2">
	<%= render 'shared/transp_menu' %>
</aside>
<div class="col-md-10">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Requisitante</th>
				<th><%= sort_link(@q, :data_inicio) %></th>
				<th><%= sort_link(@q, :data_fim) %></th>
				<th>Assunto</th>
				<th>Serviço</th>
				<th>Condutor</th>
				<th>Ocupantes</th>
				<th>Local saída</th>
				<th>Local regresso</th>
			</tr>
		</thead>
		<tbody>
			<!-- Pendentes -->
			<tr class="active"><td colspan="9">Pendentes</td></tr>
			<% @trips.where(aprovacao: 0).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>

			<!-- Aprovadas -->
			<tr class="success"><td colspan="9">Aprovadas</td></tr>
			<% @trips.where(aprovacao: 1).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>

			<!-- Rejeitadas -->
			<tr class="danger"><td colspan="9">Rejeitadas</td></tr>
			<% @trips.where(aprovacao: 2).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>
		</tbody>
	</table>
</div>