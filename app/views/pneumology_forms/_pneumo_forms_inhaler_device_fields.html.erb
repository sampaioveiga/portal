<div class="nested-fields row">
    <div class="field col-md-5">
        <%= f.collection_select :pneumo_inhaler_device_id, @inhaler_devices, :id, :full_name, {}, class: 'form-control' %>
    </div>
    <div class="field col-md-7">
        <div class="input-group">
            <%= f.text_field :observacao, placeholder: 'Observação', class: 'form-control' %>
            <span class="input-group-btn">
                <%= link_to_remove_association "Remover", f, class: 'btn btn-danger' %>
            </span>
        </div>
    </div>
</div>