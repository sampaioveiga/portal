<aside class="col-md-2">
	<%= render 'shared/admin_menu' %>
</aside>
<div class="col-md-10">
	<h1>
		<%= @user.titulo %> <%= @user.nome_utilizador %> 
		<div class="btn-group" role="group" aria-label="...">
			<a href="<%= edit_user_path(@user) %>" class="btn btn-info"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
			<% if current_user.administrator %>
				<a href="" class="btn btn-warning"><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span></a>
			<% end %>
		</div>
	</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Contacto</th>
				<th>Email</th>
				<th>Servi√ßo</th>
				<th>Unidade</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<% @user.user_phone_numbers.each do |phone| %>
						<%= phone.numero_contacto %><br />
					<% end %>
				</td>
				<td><%= @user.email %></td>
				<td>
					<% @user.ulsne_departments.each do |servico| %>
						<%= servico.nome_servico %><br />
					<% end %>
				</td>
				<td><%= @user.ulsne_site.nome_unidade %></td>
			</tr>
		</tbody>
	</table>
	<%= render 'administrator' if current_user.administrator %>
</div>