<%= form_for([:contacts, @ulsne_site], html: { class: 'form-horizontal' }) do |f| %>
	<%= render 'shared/error_messages' ,obj: @ulsne_site %>

	<!-- Nome da unidade -->
	<div class="form-group">
		<%= f.label :nome_unidade, "Designação da unidade", class: 'control-label col-md-3' %>
		<div class="col-md-9">
			<%= f.text_field :nome_unidade, class: 'form-control' %>
		</div>
	</div>

	<!-- Telefone -->
	<div class="form-group">
		<%= f.label :telefone, class: 'control-label col-md-3' %>
		<div class="col-md-9">
			<%= f.number_field :telefone, class: 'form-control' %>
		</div>
	</div>

	<div class="col-md-offset-3">
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
		<%= link_to "Cancelar", :back, class: 'btn btn-default' %>
	</div>
<% end %>