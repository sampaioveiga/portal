<%= form_for([:uci, @patient, @patient.uci_wounds.build]) do |f| %>
	<%= render 'shared/error_messages', obj: @patient %>

	<div class="form-group">
		<%= f.text_field :user_id, value: current_user.id, class: 'form-control hidden' %>
	</div>

	<div class="form-group">
		<%= f.label :wound_type_id, "Tipo de ferida" %>
		<%= f.collection_select(:wound_type_id, @wound_types, :id, :ferida, {}, class: 'form-control') %>
	</div>

	<div class="form-group">
		<%= f.label :body_part_id, "Parte do corpo" %>
		<%= f.collection_select(:body_part_id, @body_parts, :id, :parte_do_corpo, {}, class: 'form-control') %>
	</div>

	<div class="form-group">
		<%= f.label :data_registo %>
		<%= f.date_field :data_registo, value: Date.today, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :origem %>
		<%= f.text_field :origem, class: 'form-control' %>
	</div>

	<div class="form-group">

	<div class="col-md-6">
		<%= f.label :complicacoes %>
		<div class="btn-group" data-toggle="buttons">
			<label class="btn btn-default active">
				<input type="radio" name="uci_wound[complicacoes]" id="uci_wound_complicacoes_nao" value="false" autocomplete="off" checked> Não
			</label>
			<label class="btn btn-default">
				<input type="radio" name="uci_wound[complicacoes]" id="uci_wound_complicacoes_sim" value="true" autocomplete="off"> Sim
			</label>
		</div>
	</div>

	<div class="col-md-6">
		<%= f.label :antibioticos %>
		<div class="btn-group" data-toggle="buttons">
			<label class="btn btn-default active">
				<input type="radio" name="uci_wound[antibioticos]" id="uci_wound_antibioticos_nao" value="false" autocomplete="off" checked> Não
			</label>
			<label class="btn btn-default">
				<input type="radio" name="uci_wound[antibioticos]" id="uci_wound_antibioticos_sim" value="true" autocomplete="off"> Sim
			</label>
		</div>
	</div>

	</div>

	<div class="form-group">
		<%= f.label :observacoes %>
		<%= f.text_area :observacoes, class: 'form-control' %>
	</div>

	<div class="modal-footer">
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
		<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	</div>

<% end %>