<aside class="col-md-3">
	<%= render 'shared/menu_transp' %>
</aside>
<div class="col-md-9">

	<div class="col-md-6">
		<p>
			<small>Requisitante</small> <strong><%= @transport.user.nome_utilizador %></strong>
		</p>
	</div>

	<div class="col-md-6">
		<p>
			<small>Serviço</small> <%= @transport.ulsne_department.nome_servico %>
		</p>
	</div>

	<div class="col-md-12">
		<p>
			<small>Assunto </small>
			<%= @transport.assunto %>
		</p>
	</div>

	<div class="col-md-6">
		<p>
			<small>Local saída </small>
			<%= @transport.local_saida.destino %>
		</p>

		<p>
			<small>Data e hora entrega </small>
			<%=l @transport.data_entrega %>
		</p>
	</div>
	<div class="col-md-6">
		<p>
			<small>Local entrega </small>
			<%= @transport.local_entrega.destino %>
		</p>
		<p>
			<small>Urgente </small>
			<% if @transport.urgente == 0 %>
				Não
			<% elsif @transport.urgente == 1 %>
				Urgente
			<% else %>
				Emergente
			<% end %>
		</p>
	</div>

	<div class="col-md-12">
		<p>
			<small>Observações </small>
			<%= @transport.observacoes %>
		</p>
	</div>

	<div class="col-md-12">
		<%= render 'supervisor' if current_user.administrator || current_user.transp_user.nivel_acesso ==2 %>
	</div>
</div>