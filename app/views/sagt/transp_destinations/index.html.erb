<div class="col-md-12">
	<%= render 'shared/menu_transp' %>
</div>

<div class="col-md-10 col-md-offset-1">
	<h1>Destinos</h1>
	<table class="table">
		<thead>
			<tr>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @destinations.each do |destination| %>
				<tr>
					<td><%= link_to destination.destino, edit_sagt_transp_destination_path(destination) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class="panel panel-default">
		<div class="panel-heading">Adicionar destino</div>
		<div class="panel-body">
			<%= render 'form' %>
		</div>
	</div>
</div>