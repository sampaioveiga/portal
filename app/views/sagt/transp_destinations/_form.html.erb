<%= form_for([:sagt, @destination], html: { class: 'form-horizontal' }) do |f| %>

	<div class="form-group">
		<%= f.label :destino, class: 'control-label col-md-3' %>
		<div class="col-md-9">
			<%= f.text_field :destino, class: 'form-control' %>
		</div>
	</div>
	<div class="col-md-offset-3">
		<%= f.submit "Submeter", class: 'btn btn-primary' %>
		<% if action_name == "edit" %>
			<%= link_to "Cancelar", :back, class: 'btn btn-default' %>
		<% end %>
	</div>
<% end %>