<div class="col-md-12">
	<%= render 'shared/menu_transp' %>
</div>

<div class="col-md-10 col-md-offset-1">
	<h1>Deslocações futuras</h1>
	<table class="table table-condensed table-hover">
		<thead>
			<tr>
				<th>Criado em </th>
				<th>Requisitante</th>
				<th>Serviço</th>
				<th>Destino</th>
				<th><%= sort_link(@q, :data_inicio) %></th>
				<th><%= sort_link(@q, :data_fim) %></th>
				<th>Assunto</th>
				<th>Local saída</th>
				<th>Local regresso</th>
			</tr>
		</thead>
		<tbody>
			<!-- Pendentes -->
			<tr class="info"><td colspan="9">Pendentes</td></tr>
			<% @trips.where(aprovacao: 0).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>

			<!-- Aprovadas -->
			<tr class="success"><td colspan="9">Aprovadas</td></tr>
			<% @trips.where(aprovacao: 1).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>

			<!-- Rejeitadas -->
			<tr class="danger"><td colspan="9">Rejeitadas</td></tr>
			<% @trips.where(aprovacao: 2).each do |t| %>
				<%= render 'table_row', obj: t %>
			<% end %>
		</tbody>
	</table>
</div>