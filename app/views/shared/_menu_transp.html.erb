<ul class="nav nav-pills nav-stacked">
	<!-- deslocações pessoais -->
	<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_user_trips_calendar_path) %>>
		<%= link_to sagt_transp_user_trips_calendar_path() do %>
			<span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Req. deslocação individual
		<% end %>
	</li>
	<li role="presentation" class=<%= 'active' if current_page?(new_sagt_transp_user_trip_path) %>>
		<%= link_to new_sagt_transp_user_trip_path() do %>
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova deslocação individual
		<% end %>
	</li>

	<!-- transporte materiais -->
	<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_materials_calendar_path) %>>
		<%= link_to sagt_transp_materials_calendar_path() do %>
			<span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Req. tranporte de material
		<% end %>
	</li>
	<li role="presentation" class=<%= 'active' if current_page?(new_sagt_transp_material_path) %>>
		<%= link_to new_sagt_transp_material_path() do %>
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo transporte material
		<% end %>
	</li>

	<!-- admin menu -->
	<% if policy(:transp_user).index? %>

		<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_user_trips_path) %>>
			<%= link_to sagt_transp_user_trips_path() do %>
				<span class="glyphicon glyphicon-list" aria-hidden="true"></span> Lista deslocações
			<% end %>
		</li>

		<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_materials_path) %>>
			<%= link_to sagt_transp_materials_path() do %>
				<span class="glyphicon glyphicon-list" aria-hidden="true"></span> Lista transporte material
			<% end %>
		</li>

		<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_destinations_path) %>>
			<%= link_to sagt_transp_destinations_path() do %>
				<span class="glyphicon glyphicon-road" aria-hidden="true"></span> Gerir destinos
			<% end %>
		</li>

		<li role="presentation" class=<%= 'active' if current_page?(sagt_transp_users_path) %>>
			<%= link_to sagt_transp_users_path() do %>
				<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Gerir utilizadores
			<% end %>
		</li>
	<% end %>

	<%- if controller_name == 'transp_user_trips' && action_name == 'show' %>
		<li role="presentation">
			<%= link_to edit_sagt_transp_user_trip_path(@trip), class: 'text-success' do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar requisição
			<% end %>
		</li>
	<% end %>

	<%- if controller_name == 'transp_materials' && action_name == 'show' %>
		<li role="presentation">
			<%= link_to edit_sagt_transp_material_path(@transport), class: 'text-success' do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar requisição
			<% end %>
		</li>
	<% end %>

	<!-- if New or Edit -> cancelar  -->
	<%- if action_name == 'new' || action_name == 'edit' %>
		<li role="presentation">
			<%= link_to :back, class: 'text-muted' do %>
				<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Cancelar
			<% end %>
		</li>
	<% end %>
</ul>