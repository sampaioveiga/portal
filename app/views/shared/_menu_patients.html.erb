<ul class="nav nav-pills nav-stacked">
	<li role="presentation" class=<%= 'active' if current_page?(patients_path) %>>
		<%= link_to patients_path() do %>
			<span class="glyphicon glyphicon-list" aria-hidden="true"></span> Doentes
		<% end %>
	</li>

	<%- if controller_name == 'patients' && (action_name == 'show' || action_name == 'processo_sonho') %>

		<!-- UCI menu -->
		<%#- if controller_name == 'patients' && (action_name == 'show' || action_name == 'processo_sonho') %>
		<li role="presentation">
			<%= link_to uci_patient_path(@patient) do %>
				<span class="glyphicon glyphicon-book" aria-hidden="true"></span> Ficha UCI
			<% end %>
		</li>
		<%# end %>

		<li role="presentation">
			<%= link_to edit_patient_path(@patient), class: 'text-success' do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar dados
			<% end %>
		</li>
	<% end %>

	<!-- Cancel action if edit or new  -->
	<%- if action_name == 'edit' || action_name == 'new' %>
		<li role="presentation">
			<%= link_to :back, class: 'text-muted' do %>
				<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Cancelar
			<% end %>
		</li>
	<% end %>
</ul>