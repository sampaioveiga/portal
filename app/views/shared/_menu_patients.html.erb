<ul class="nav nav-pills nav-stacked">
	<li role="presentation">
		<%= link_to patients_path() do %>
			<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
		<% end %>
	</li>

	<%- if controller_name == 'patients' && (action_name == 'show' || action_name == 'processo_sonho') %>

		<% if policy([:uci, UciDevice]).create? %>
			<li role="presentation">
				<a href="#" class="text-success" data-toggle="modal" data-target="#newDeviceModal">
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo dispositivo
				</a>
			</li>
		<% end %>

		<% if policy([:uci, UciWound]).create? %>
			<li role="presentation">
				<a href="#" class="text-success" data-toggle="modal" data-target="#newWoundModal">
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova ferida
				</a>
			</li>
		<% end %>

		<% if policy([:uci, UciTissValue]).create? %>
			<li role="presentation">
				<a href="#" class="text-success" data-toggle="modal" data-target="#newTissModal">
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Registar TISS
				</a>
			</li>
		<% end %>

		<li role="presentation" class="<%= 'active' if current_page?(patient_url) %>">
			<%= link_to edit_patient_path(@patient) do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar ficha
			<% end %>
		</li>

	<% end %>

	<!-- Supervisor UCI -->
	<% if policy([:uci, User]).index? %>
		<li role="presentation" class="dropdown">
			<a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
				<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
				Supervisor UCI <span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
				<li role="presentation">
					<%= link_to 'Lista dispositivos', device_types_path() %>
				</li>

				<li role="presentation">
					<%= link_to 'Lista feridas', wound_types_path()%>		
				</li>

				<li role="presentation">
					<%= link_to 'Lista partes do corpo', body_parts_path()%>
				</li>

				<li role="presentation">
					<%= link_to 'Mapa TISS 28', patients_map_tiss_28_path()%>
				</li>

				<li role="presentation">
					<%= link_to 'Utilizadores UCI', uci_users_path()%>
				</li>
			</ul>
		</li>
	<% end %>

	<!-- Cancel action if edit or new  -->
	<%- if action_name == 'edit' || action_name == 'new' %>
		<li role="presentation">
			<%= link_to :back, class: 'text-muted' do %>
				<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Cancelar
			<% end %>
		</li>
	<% end %>
</ul>