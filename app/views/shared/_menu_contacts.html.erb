<ul class="nav nav-pills nav-stacked">
	<li role="presentation" class=<%= 'active' if current_page?(contacts_users_path) %>>
		<%= link_to contacts_users_path() do %>
			<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Colaboradores
		<% end %>
	</li>

	<li role="presentation" class=<%= 'active' if current_page?(contacts_ulsne_departments_path) %>>
		<%= link_to contacts_ulsne_departments_path() do %>
			<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 
			Serviços
		<% end %>
	</li>

	<li role="presentation" class=<%= 'active' if current_page?(contacts_ulsne_sites_path) %>>
		<%= link_to contacts_ulsne_sites_path() do %>
			<span class="glyphicon glyphicon-list" aria-hidden="true"></span> 
			Unidades
		<% end %>
	</li>
	
	<!-- if Users -->
	<%- if controller_name == 'users' && action_name == 'show' && policy(:user).edit? %>
		<li role="presentation">
			<%= link_to edit_contacts_user_path(@user), class: 'text-success' do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar perfil
			<% end %>
		</li>
		<li role="presentation">
			<%= link_to contacts_user_path(@user), method: :delete, data: { confirm: 'Tem a certeza?' }, class: 'text-danger' do %>
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Eliminar
			<% end %>
		</li>
	<% end %>

	<!-- if Departments -->
	<%- if controller_name == 'ulsne_departments' && action_name == 'index' && policy(:ulsne_department).new? %>
		<ul class="nav nav-pills nav-stacked">
			<li role="presentation">
				<%= link_to new_contacts_ulsne_department_path(), class: 'text-success' do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo serviço
				<% end %>
			</li>
		</ul>
	<% end %>
	<%- if controller_name == 'ulsne_departments' && action_name == 'show' && policy(:user).edit? %>
		<ul class="nav nav-pills nav-stacked">
			<li role="presentation">
				<%= link_to edit_contacts_ulsne_department_path(@ulsne_department), class: 'text-success' do %>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar dados
				<% end %>
			</li>
		</ul>
	<% end %>

	<!-- if Sites  -->
	<%- if controller_name == 'ulsne_sites' && action_name == 'index' && policy(:ulsne_site).new? %>
		<ul class="nav nav-pills nav-stacked">
			<li role="presentation">
				<%= link_to new_contacts_ulsne_site_path(), class: 'text-success' do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova unidade
				<% end %>
			</li>
		</ul>
	<% end %>

	<!-- if Edits  -->
	<%- if action_name == 'edit' || action_name == 'new' %>
		<li role="presentation">
			<%= link_to :back, class: 'text-muted' do %>
				<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Cancelar
			<% end %>
		</li>
	<% end %>
</ul>